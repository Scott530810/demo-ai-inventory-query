# Dockerfile for Ollama version (Refactored - v2.0)
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files (modular structure)
COPY ambulance_inventory/ ./ambulance_inventory/
COPY run_refactored.py .

# Also keep the old version for backward compatibility
COPY test_llm_query_ollama.py .

# Set environment variables
ENV PYTHONUNBUFFERED=1

# Default command uses the new refactored version
# Use --interactive, --demo, or --check as needed
CMD ["python", "run_refactored.py", "--interactive"]
